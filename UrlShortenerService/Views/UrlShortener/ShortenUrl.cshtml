@using UrlShortenerService.Models
@model ShortenUrlViewModel
@{
    ViewBag.Title = "Shorten Url";
}

<h2>Url Shortener</h2>
@using (Html.BeginForm("ShortenUrl", "UrlShortener"))
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-6">
            @if (!String.IsNullOrEmpty(Model.ShortUrl))
            {
                <div class="alert-success">
                    Click on the link to view the generated url
                </div>
                <a href="@Model.ShortUrl"> @Model.ShortUrl </a>
            }
            <div class="form-group">
                <label class="control-label">Enter Url</label>
                <input name="LongUrl" required class="form-control" />
            </div>
            <input type="submit" value="Shorten Url" class="btn  bg-grey btn-block" />
        </div>
    </div>

}


